{
  "name": "Ubuntu Dev Container",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",  // Use your current base image if different
  "runArgs": [
    "--env=WAYLAND_DISPLAY=${localEnv:WAYLAND_DISPLAY}",
    "--env=XDG_RUNTIME_DIR=/tmp/xdg-runtime-dir",
    "--volume=${localEnv:XDG_RUNTIME_DIR}/${localEnv:WAYLAND_DISPLAY}:/tmp/xdg-runtime-dir/${localEnv:WAYLAND_DISPLAY}:ro",
    "--security-opt=seccomp=unconfined",  // Helps with SDL/Pygame permissions
    "--network=host"
  ],
  "postCreateCommand": "mkdir -p /tmp/xdg-runtime-dir && sudo apt update && sudo apt install -y libsdl2-2.0-0 libwayland-client0 libegl1-mesa libgbm1 libgles2-mesa"
}